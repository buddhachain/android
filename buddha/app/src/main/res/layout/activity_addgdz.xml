<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_8e"
    android:orientation="vertical"
    tools:context=".ui.activity.AddgdzActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_16"
        android:paddingRight="@dimen/dimen_16">

        <ImageView
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16"
            android:text="功德名称" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6E5B2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_16"
                android:layout_height="@dimen/dimen_16"
                android:src="@mipmap/ic_default_img" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="提示不要填错信息" />

            <ImageView
                android:layout_width="@dimen/dimen_16"
                android:layout_height="@dimen/dimen_16"
                android:src="@mipmap/ic_default_img" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginRight="@dimen/dimen_16"
            android:background="@color/color_white"
            android:padding="@dimen/dimen_16">

            <ImageView
                android:layout_width="@dimen/dimen_32"
                android:layout_height="@dimen/dimen_32"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_default_img" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_48"
                android:text="添加功德主" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1"
                android:layout_marginLeft="@dimen/dimen_48"
                android:layout_marginTop="@dimen/dimen_4"
                android:text="功德主资料将用于记录与反馈" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginRight="@dimen/dimen_16"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:padding="@dimen/dimen_16">

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="功德芳名" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text2"
                android:text="*"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/edit_name"
                style="@style/whiteGrayEditBg"
                android:layout_width="match_parent"
                android:layout_below="@id/text2"
                android:layout_marginTop="@dimen/dimen_8"
                android:hint="请填写功德主姓名" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_name"
                android:layout_marginTop="@dimen/dimen_8"
                android:text="心愿" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/text3"
                android:layout_toRightOf="@id/text3"
                android:text="*"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/edit_wish"
                style="@style/whiteGrayEditBg"
                android:layout_width="match_parent"
                android:layout_below="@id/text3"
                android:layout_marginTop="@dimen/dimen_8"
                android:hint="请填写你的心愿单" />


            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_wish"
                android:layout_marginTop="@dimen/dimen_8"
                android:text="手机号码" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/text4"
                android:layout_toRightOf="@id/text4"
                android:text="*"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/edit_phone"
                style="@style/whiteGrayEditBg"
                android:layout_width="match_parent"
                android:layout_below="@id/text4"
                android:layout_marginTop="@dimen/dimen_8"
                android:hint="请填写联系电话（方便寺院和您联系）" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_phone"
                android:layout_marginTop="@dimen/dimen_8"
                android:background="@color/color_gray_8e"
                android:padding="@dimen/dimen_4"
                android:text="关于善举的提醒dsrgfs"
                android:textColor="@color/color_white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginRight="@dimen/dimen_16"
            android:background="@color/color_white"
            android:paddingLeft="@dimen/dimen_16"
            android:paddingTop="@dimen/dimen_8"
            android:paddingRight="@dimen/dimen_16"
            android:paddingBottom="@dimen/dimen_8">

            <ImageView
                android:id="@+id/user_logo"
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:src="@mipmap/ic_default_img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/user_logo"
                android:layout_marginLeft="@dimen/dimen_8"
                android:layout_toRightOf="@id/user_logo"
                android:text="匿名参与" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_logo"
                android:layout_marginTop="@dimen/dimen_4"
                android:text="对寺院，其他用户在参与记录中将隐藏您的名称" />

            <Switch
                android:layout_width="@dimen/dimen_40"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginRight="@dimen/dimen_16"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击下一步表示已同意" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《自在家用户协议》"
                android:textColor="#0F5A95" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginLeft="@dimen/dimen_32"
            android:layout_marginRight="@dimen/dimen_32"
            android:layout_marginBottom="@dimen/dimen_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_white_gray_f8_left_r20"
                android:gravity="center"
                android:text="合计:1080BUG" />

            <TextView
                android:id="@+id/btn_next_step"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_gray_f8_right_r20"
                android:gravity="center"
                android:text="下一步" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>