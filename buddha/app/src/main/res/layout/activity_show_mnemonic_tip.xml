<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.MnemonicActivity">

    <include layout="@layout/item_top_back_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_15"
        android:background="@drawable/bg_white_gray_f8_r4"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_15"
            android:text="请认真阅读如下说明"
            android:textColor="@color/color_text_level1"
            android:textSize="@dimen/text_dimen_16"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_marginBottom="@dimen/dimen_15"
            android:background="@color/color_base_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="●"
                android:textColor="@color/base_color"
                android:textSize="@dimen/dimen_12" />

            <View
                android:layout_width="@dimen/dimen_10"
                android:layout_height="@dimen/dimen_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获得私钥等于拥有钱包资产所有权"
                android:textColor="@color/color_text_level1"
                android:textSize="@dimen/dimen_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="●"
                android:textColor="@color/base_color"
                android:textSize="@dimen/dimen_12" />

            <View
                android:layout_width="@dimen/dimen_10"
                android:layout_height="@dimen/dimen_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用纸笔正确抄写，并保管至安全的地方"
                android:textColor="@color/color_text_level1"
                android:textSize="@dimen/dimen_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="●"
                android:textColor="@color/base_color"
                android:textSize="@dimen/dimen_12" />

            <View
                android:layout_width="@dimen/dimen_10"
                android:layout_height="@dimen/dimen_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="私钥丢失将无法找回，请务必妥善保存"
                android:textColor="@color/color_text_level1"
                android:textSize="@dimen/dimen_14" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/view_goto_show"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginLeft="@dimen/dimen_60"
        android:layout_marginTop="@dimen/dimen_50"
        android:layout_marginRight="@dimen/dimen_60"
        android:background="@color/base_color"
        android:gravity="center"
        android:text="确认导出"
        android:textColor="@color/color_white" />

    <TextView
        android:id="@+id/view_not_show"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginLeft="@dimen/dimen_60"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_60"
        android:background="@color/color_gray_8e"
        android:gravity="center"
        android:text="暂不导出"
        android:textColor="@color/color_white" />

</LinearLayout>