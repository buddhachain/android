<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/dimen_180"
        android:layout_height="@dimen/dimen_180"
        android:src="@mipmap/icon_wallet_guide" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建自己的钱包" />

    <TextView
        android:id="@+id/view_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_60"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_60"
        android:background="@color/base_color"
        android:gravity="center"
        android:paddingTop="@dimen/dimen_10"
        android:paddingBottom="@dimen/dimen_10"
        android:text="创建钱包"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_dimen_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_60"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_60"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_10"
        android:paddingBottom="@dimen/dimen_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有钱包？"
            android:textColor="@color/color_text_level2"
            android:textSize="@dimen/text_dimen_13" />

        <TextView
            android:id="@+id/view_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:padding="@dimen/dimen_3"
            android:text="点此导入钱包"
            android:textColor="@color/base_color"
            android:textSize="@dimen/text_dimen_16"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>