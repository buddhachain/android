<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.MnemonicActivity">

    <include layout="@layout/item_top_back_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_15"
        android:background="@drawable/bg_white_gray_f8_r4"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_15"
            android:text="请认真阅读如下说明"
            android:textColor="@color/color_text_level1"
            android:textSize="@dimen/text_dimen_16"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_marginBottom="@dimen/dimen_15"
            android:background="@color/color_base_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="●"
                android:textColor="@color/base_color"
                android:textSize="@dimen/dimen_12" />

            <View
                android:layout_width="@dimen/dimen_10"
                android:layout_height="@dimen/dimen_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未备份助记词，将无法保障资产安全"
                android:textColor="@color/color_text_level1"
                android:textSize="@dimen/dimen_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="●"
                android:textColor="@color/base_color"
                android:textSize="@dimen/dimen_12" />

            <View
                android:layout_width="@dimen/dimen_10"
                android:layout_height="@dimen/dimen_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="助记词等同于您的银行卡号+密码，获得助记词等同于获得HD钱包资产的所有权。"
                android:textColor="@color/color_text_level1"
                android:textSize="@dimen/dimen_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="●"
                android:textColor="@color/base_color"
                android:textSize="@dimen/dimen_12" />

            <View
                android:layout_width="@dimen/dimen_10"
                android:layout_height="@dimen/dimen_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请确保在四周无人、没有摄像头的安全环境下进行备份。"
                android:textColor="@color/color_text_level1"
                android:textSize="@dimen/dimen_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="●"
                android:textColor="@color/base_color"
                android:textSize="@dimen/dimen_12" />

            <View
                android:layout_width="@dimen/dimen_10"
                android:layout_height="@dimen/dimen_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请勿将助记词发送给任何人，包括任何自称是工作人员的人。"
                android:textColor="@color/color_text_level1"
                android:textSize="@dimen/dimen_14" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="●"
                android:textColor="@color/base_color"
                android:textSize="@dimen/dimen_12" />

            <View
                android:layout_width="@dimen/dimen_10"
                android:layout_height="@dimen/dimen_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="如果您的手机丢失、损坏或者卸载APP后，您可以使用助记词恢复HD钱包。"
                android:textColor="@color/color_text_level1"
                android:textSize="@dimen/dimen_14" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/view_goto_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginLeft="@dimen/dimen_60"
        android:layout_marginTop="@dimen/dimen_50"
        android:layout_marginRight="@dimen/dimen_60"
        android:background="@color/base_color"
        android:gravity="center"
        android:text="开始备份"
        android:textColor="@color/color_white" />

    <TextView
        android:id="@+id/view_not_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginLeft="@dimen/dimen_60"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_60"
        android:background="@color/color_gray_8e"
        android:gravity="center"
        android:text="暂不备份"
        android:textColor="@color/color_white" />
</LinearLayout>