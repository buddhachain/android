<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_8e"
    android:orientation="vertical"
    tools:context=".ui.activity.PaymentOrderActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/dimen_16"
        android:paddingRight="@dimen/dimen_16">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16"
            android:text="支付订单" />
    </RelativeLayout>

    <LinearLayout
        android:background="@drawable/bg_white_gray_f8_r4"
        android:layout_marginRight="@dimen/dimen_16"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_8"
        android:paddingTop="@dimen/dimen_8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="@dimen/dimen_16"
            android:paddingRight="@dimen/dimen_16"
            android:maxLines="1"
            android:text="订单编号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginBottom="@dimen/dimen_8"
            android:background="@color/color_gray_f8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"/>
        <RelativeLayout
            android:padding="@dimen/dimen_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/order_name"
                android:text="dasrfkrdngkndsl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/dimen_4"
                android:layout_below="@id/order_name"
                android:id="@+id/order_msg"
                android:text="dasrfkrdngkndsl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/colorAccent"
                android:layout_alignParentRight="true"
                android:id="@+id/order_price"
                android:text="108BUD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/colorAccent"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dimen_4"
                android:layout_below="@id/order_name"
                android:id="@+id/order_number"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/line1"
                android:layout_below="@id/order_msg"
                android:layout_marginTop="@dimen/dimen_8"
                android:layout_marginBottom="@dimen/dimen_8"
                android:background="@color/color_gray_f8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="应付:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="@dimen/dimen_8"
                    android:textColor="@color/colorAccent"
                    android:text="108BUD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>
    <TextView
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_16"
        android:text="支付方式"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginRight="@dimen/dimen_16"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"/>
        <TextView
            android:layout_marginLeft="@dimen/dimen_8"
            android:text="BUD"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:checked="true"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"/>

    </LinearLayout>
    <View
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginRight="@dimen/dimen_16"
        android:paddingTop="@dimen/dimen_16"
        android:paddingBottom="@dimen/dimen_16"
        android:paddingLeft="@dimen/dimen_32"
        android:paddingRight="@dimen/dimen_32"
        android:background="@drawable/bg_white_gray_f8_r4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/notice_img"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dimen_32"
            android:layout_height="@dimen/dimen_32"/>
        <TextView
            android:id="@+id/notice_text1"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_toRightOf="@id/notice_img"
            android:text="已获得授权，您可放心支付"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/notice_text2"
            android:layout_marginTop="@dimen/dimen_4"
            android:text="授权单位"
            android:layout_alignLeft="@id/notice_text1"
            android:layout_below="@id/notice_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_toRightOf="@id/notice_text2"
            android:id="@+id/notice_text3"
            android:layout_marginTop="@dimen/dimen_4"
            android:text="寺院活动"
            android:layout_below="@id/notice_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:background="@color/color_gray_8e"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_toRightOf="@id/notice_text3"
            android:id="@+id/notice_text4"
            android:layout_marginTop="@dimen/dimen_4"
            android:text="查看详情"
            android:layout_below="@id/notice_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginBottom="@dimen/dimen_10"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="确认支付"
        android:background="@drawable/bg_white_gray_f8_r4"
        android:layout_width="@dimen/dimen_200"
        android:layout_height="@dimen/dimen_40"/>


</LinearLayout>