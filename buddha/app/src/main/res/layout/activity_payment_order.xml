<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_8e"
    android:orientation="vertical"
    tools:context=".ui.activity.PaymentOrderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/dimen_16"
        android:paddingRight="@dimen/dimen_16">

        <ImageView
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_16"
            android:text="支付订单" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginRight="@dimen/dimen_16"
        android:background="@drawable/bg_white_gray_f8_r4"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingLeft="@dimen/dimen_16"
            android:paddingRight="@dimen/dimen_16"
            android:text="订单编号" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginBottom="@dimen/dimen_8"
            android:background="@color/color_gray_f8" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_16">

            <TextView
                android:id="@+id/order_danjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单价" />

            <TextView
                android:id="@+id/order_shuliang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_danjia"
                android:layout_marginTop="@dimen/dimen_4"
                android:text="数量" />

            <TextView
                android:id="@+id/order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="108BUD"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_danjia"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dimen_4"
                android:text="1"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:layout_below="@id/order_shuliang"
                android:layout_marginTop="@dimen/dimen_8"
                android:layout_marginBottom="@dimen/dimen_8"
                android:background="@color/color_gray_f8" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应付:" />

                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8"
                    android:text="108BUD"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_16"
        android:text="支付方式" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginRight="@dimen/dimen_16"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:src="@mipmap/ic_default_img" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_weight="1"
            android:text="BUD" />

        <CheckBox
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:checked="true" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginRight="@dimen/dimen_16"
        android:background="@drawable/bg_white_gray_f8_r4"
        android:paddingLeft="@dimen/dimen_32"
        android:paddingTop="@dimen/dimen_16"
        android:paddingRight="@dimen/dimen_32"
        android:paddingBottom="@dimen/dimen_16">

        <ImageView
            android:id="@+id/notice_img"
            android:layout_width="@dimen/dimen_32"
            android:layout_height="@dimen/dimen_32"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_default_img" />

        <TextView
            android:id="@+id/notice_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_toRightOf="@id/notice_img"
            android:text="已获得授权，您可放心支付" />

        <TextView
            android:id="@+id/notice_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notice_text1"
            android:layout_alignLeft="@id/notice_text1"
            android:layout_marginTop="@dimen/dimen_4"
            android:text="授权单位" />

        <TextView
            android:id="@+id/notice_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notice_text1"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_toRightOf="@id/notice_text2"
            android:text="寺院活动" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notice_text1"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_toRightOf="@id/notice_text3"
            android:background="@color/color_gray_8e"
            android:text="查看详情" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="@dimen/dimen_200"
        android:layout_height="@dimen/dimen_40"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginBottom="@dimen/dimen_10"
        android:background="@drawable/bg_white_gray_f8_r4"
        android:gravity="center"
        android:text="确认支付" />

</LinearLayout>