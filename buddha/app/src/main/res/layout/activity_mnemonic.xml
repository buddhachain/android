<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.MnemonicActivity">

    <include layout="@layout/item_top_back_bar" />

    <TextView
        android:id="@+id/tv_mnemonic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_10"
        android:letterSpacing="0.4"
        android:lineSpacingExtra="@dimen/dimen_25"
        android:text="助记词"
        android:textColor="@color/color_text_level1"
        android:textSize="@dimen/dimen_25"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/view_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_80"
        android:background="@color/color_gray_8e"
        android:gravity="center"
        android:text="我已保存"
        android:textColor="@color/color_white" />

</LinearLayout>