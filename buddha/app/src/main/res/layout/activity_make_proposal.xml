<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.SendShanjvActivity">

    <include layout="@layout/item_top_back_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_marginRight="@dimen/dimen_16"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:text="提案名称" />

            <EditText
                android:id="@+id/et_shanjv_name"
                style="@style/whiteGrayEditBg"
                android:layout_width="match_parent"
                android:textSize="@dimen/text_dimen_16"
                android:layout_marginTop="@dimen/dimen_8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:text="数量" />

            <EditText
                android:id="@+id/et_new_value"
                style="@style/whiteGrayEditBg"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dimen_8"
                android:textSize="@dimen/text_dimen_16"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:text="过期日期" />

            <TextView
                android:id="@+id/tv_choose_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_8"
                android:background="@drawable/bg_white_gray_f8_r4"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_12"
                android:paddingRight="@dimen/dimen_12"
                android:textSize="@dimen/text_dimen_16" />

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_80"
                android:background="@color/color_gray_8e"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/color_white" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>