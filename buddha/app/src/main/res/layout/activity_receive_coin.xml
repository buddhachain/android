<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.RenzhengMasterActivity">

    <include layout="@layout/item_top_back_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_15"
                android:background="@drawable/bg_white_gray_f8_r4"
                android:elevation="@dimen/dimen_1"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_16">

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BUD"
                    android:textColor="@color/color_text_level1"
                    android:textSize="@dimen/dimen_18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_15"
                android:background="@drawable/bg_white_gray_f8_r4"
                android:elevation="@dimen/dimen_1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dimen_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扫描二维码转入"
                    android:textColor="@color/color_text_level2"
                    android:textSize="@dimen/dimen_13" />

                <ImageView
                    android:id="@+id/iv_qrcode"
                    android:layout_width="@dimen/dimen_150"
                    android:layout_height="@dimen/dimen_150"
                    android:layout_margin="@dimen/dimen_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的地址"
                    android:textColor="@color/color_text_level2"
                    android:textSize="@dimen/dimen_13" />

                <TextView
                    android:id="@+id/tv_my_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_8"
                    android:textColor="@color/color_text_level1"
                    android:textSize="@dimen/dimen_18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/view_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:background="@color/color_gray_8e"
                    android:padding="@dimen/dimen_3"
                    android:text="复制地址"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/dimen_13" />

                <EditText
                    android:id="@+id/et_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_18"
                    android:background="@drawable/bg_gray_f8_r4"
                    android:hint="请输入金额"
                    android:inputType="number"
                    android:padding="@dimen/dimen_12"
                    android:textColor="@color/color_text_level1"
                    android:textColorHint="@color/hint_gray"
                    android:textSize="@dimen/dimen_16"
                    android:textStyle="bold" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/dimen_18"
                android:text="*本地址仅用于转入接收BUD，请勿将其它资产转入"
                android:textColor="@color/base_color_transparent"
                android:textSize="@dimen/text_dimen_12" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>